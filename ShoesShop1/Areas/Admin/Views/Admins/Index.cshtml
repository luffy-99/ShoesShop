
@model PagedList.IPagedList<Model.EF.Admin>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quan ly nguoi dung ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách người dùng 
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Kitchen Sink
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Admins", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit">Tin kiem</button>
                            </div>
                        </div>
                    </div>
                }
                
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tai khoan</th>
                                <th>Email</th>
                                <th>Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="Edit/@item.adminId">Sua</a>
                                        @Ajax.ActionLink("Xoa", "Delete",new {@id=@item.adminId }, new AjaxOptions
                                   {
                                       Confirm = "Ban co muon xoa ban ghi khong?",
                                       OnComplete = "$('row_" + @item.adminId + "').remove()",
                                       HttpMethod="Delete"
                                   }
                                       )
                                    </td>
                                    <td>@item.adminName</td>
                                    <td>@item.email</td>
                                    <td>@item.password</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page=> Url.Action("Index",new { page }));
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>>

